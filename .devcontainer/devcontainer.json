{
    "name": "Go WebSocket DevContainer",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    // Verzeichnis innerhalb des Containers, in dem der Code liegt.
    "workspaceFolder": "/workspace",
    
    // Ports, die an Codespaces weitergeleitet werden sollen
    "forwardPorts": [8080],

    // Befehle, die nach dem Container-Start ausgeführt werden (z.B. Go-Module laden)
    "postCreateCommand": "go mod tidy || true",

    // (Optional) Erweiterungen, die Sie in VS Code verwenden möchten
    "customizations": {
        "vscode": {
            "extensions": [
                "golang.Go",
                "ms-vscode.vscode-typescript-next",
                "dbaeumer.vscode-eslint"
            ]
        }
    }
}
